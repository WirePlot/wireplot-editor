{
  "openapi": "3.0.0",
  "info": {
    "title": "Test API",
    "version": "1.0.0"
  },
  "paths": {},
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "isActive": { "type": "boolean" },
          "profile": {
            "$ref": "#/components/schemas/Profile"
          },
          "roles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Role"
            }
          }
        },
        "required": ["id", "name", "email"]
      },
      "Profile": {
        "type": "object",
        "properties": {
          "bio": { "type": "string" },
          "birthdate": { "type": "string", "format": "date" },
          "address": {
            "$ref": "#/components/schemas/Address"
          },
          "preferences": {
            "$ref": "#/components/schemas/Preferences"
          }
        }
      },
      "Address": {
        "type": "object",
        "properties": {
          "street": { "type": "string" },
          "city": { "type": "string" },
          "zipCode": { "type": "string" },
          "country": { "type": "string" },
          "geo": {
            "$ref": "#/components/schemas/GeoLocation"
          }
        }
      },
      "GeoLocation": {
        "type": "object",
        "properties": {
          "latitude": { "type": "number" },
          "longitude": { "type": "number" }
        }
      },
      "Preferences": {
        "type": "object",
        "properties": {
          "newsletterSubscribed": { "type": "boolean" },
          "notifications": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/NotificationSettings"
            }
          }
        }
      },
      "NotificationSettings": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "enabled": { "type": "boolean" }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "permissions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Permission"
            }
          }
        }
      },
      "Permission": {
        "type": "object",
        "properties": {
          "key": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    }
  }
}


